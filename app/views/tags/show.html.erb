<%= content_for :title, "Recipe Central- Tags" %>
<h2><%= @tag. name %> </h2>
<div id="tag_view_navbar" class= "navbar navbar-fixed-bottom">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav pull-right">
          <form action="/tags/<%= @tag.id %>" method="post">
          <input name="_method" type="hidden" value="delete">
          <%= link_to "Delete Tag", tag_path(@tag),
                                      :confirm => "Are you sure you would like to delete this Tag",
                                      :method => "delete",
                                      :class => "btn btn-danger" %>
          </form>
      </div>
      <div class= "nav pull-right">
        <%= link_to "New Tag", new_tag_path, :class => "btn btn-success" %>
        <%= link_to "Edit Tag", edit_tag_path, :class => "btn btn-warning space-me" %>
      </div>
    </div>
  </div>
</div>
