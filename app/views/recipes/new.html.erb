<h1>New Recipe:</h1>

<%= render('layouts/errors', :object => @recipe) %>
<% if false %>
  <%= form_for @recipe  do |f| %>
    <div class="form-inline form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :instructions %>
      <%= f.textarea :instructions, rows:10 %>
    </div>
    <%= f.submit :class => "btn btn-info" %>
  <% end %>
<form class="form-horizontal" action="/recipes/new" method="post">
<%= render 'form' %>
<button class="btn btn-info">Create Recipe</button>
</form>
<div id= "recipe_view_navbar" class= "navbar navbar-fixed-bottom">
  <div class= "navbar-inner">
    <div class= "container">
      <div class= "nav pull-right">
        <%= link_to "New tag", new_recipe_path, :class=> "btn btn-success" %>
      </div>
    </div>
  </div>
</div>

