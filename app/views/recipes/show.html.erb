<h1><%= @recipe.name %></h1>

<h3>Instructions</h3>
  <%= simple_format @recipe.instructions %>

<div id= "recipe_view_navbar" class= "navbar navbar-fixed-bottom">
  <div class= "navbar-inner">
    <div class= "container">
      <div class= "nav pull-right">
          <form action="/recipes/<%= @recipe.id %>" method="post">
          <input name="_method" type="hidden" value="delete">
          <%= link_to "Delete Recipe", recipe_path(@recipe),
                                      :confirm => "Are you sure you would like to delete this recipe",
                                      :method => "delete",
                                      :class => "btn btn-danger" %>
          </form>
      </div>
      <div class= "nav pull-right">
        <%= link_to "New Recipe", new_recipe_path, :class => "btn btn-success" %>
        <%= link_to "Edit Recipe", edit_recipe_path, :class => "btn btn-warning space-me" %>
      </div>
    </div>
  </div>
</div>
